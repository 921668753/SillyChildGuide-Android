<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/black20">

    <LinearLayout
        android:id="@+id/ll_content"
        style="@style/MatchWrap"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen38"
        android:layout_marginRight="@dimen/dimen38"
        android:layout_marginTop="@dimen/dimen196"
        android:background="@drawable/shape_clearcache"
        android:gravity="center"
        android:orientation="vertical">


        <ListView
            android:id="@+id/lv_trip"
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:divider="@color/background"
            android:dividerHeight="@dimen/dimen1"
            android:scrollbars="none"
            tools:listitem="@layout/item_trip" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="@dimen/dimen40"
        android:layout_height="@dimen/dimen41"
        android:layout_below="@id/ll_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen15"
        android:padding="@dimen/dimen10"
        android:src="@mipmap/img_cross" />


</RelativeLayout>