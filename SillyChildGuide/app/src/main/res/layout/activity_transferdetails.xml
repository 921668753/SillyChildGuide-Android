<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        style="@style/MatchAuto"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical">


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/AutoWrap"
                    android:paddingLeft="@dimen/dimen27"
                    android:paddingRight="@dimen/dimen10"
                    android:text="日本东京室内包车"
                    android:textColor="@color/greenColors"
                    android:textSize="@dimen/textsize24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_orderPrice"
                    style="@style/WrapWrap"
                    android:maxWidth="@dimen/dimen140"
                    android:paddingRight="@dimen/dimen27"
                    android:text="¥2010.00"
                    android:textColor="@color/fF5656Colors"
                    android:textSize="@dimen/textsize18" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_demand"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:paddingLeft="@dimen/dimen27"
                android:paddingRight="@dimen/dimen27"
                android:paddingTop="@dimen/dimen28"
                android:text="2人3行李"
                android:textColor="@color/tabColors"
                android:textSize="@dimen/textsize18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen19"
                android:paddingLeft="@dimen/dimen27"
                android:paddingRight="@dimen/dimen27"
                android:paddingTop="@dimen/dimen16"
                android:text="2018-08-27   周一  09:00"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize12" />


            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen6"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen27"
                android:paddingRight="@dimen/dimen27">

                <TextView
                    style="@style/AutoWrap"
                    android:paddingBottom="@dimen/dimen23"
                    android:paddingTop="@dimen/dimen22"
                    android:text="@string/serviceTime"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_serviceTime"
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/dimen23"
                    android:text="2018-08-27   周一  09:00"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />


            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen27"
                android:paddingRight="@dimen/dimen27">

                <TextView
                    style="@style/AutoWrap"
                    android:paddingBottom="@dimen/dimen23"
                    android:text="@string/placeDeparture"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_placeDeparture"
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/dimen1"
                    android:text="希尔顿国际大酒店"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen27"
                android:paddingRight="@dimen/dimen27">

                <TextView
                    style="@style/AutoWrap"
                    android:paddingBottom="@dimen/dimen23"
                    android:text="@string/deliveredAirport"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_deliveredAirport"
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/dimen1"
                    android:text="成田国际机场"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen27"
                android:paddingRight="@dimen/dimen27">

                <TextView
                    style="@style/AutoWrap"
                    android:paddingBottom="@dimen/dimen23"
                    android:text="@string/reserveRequirements"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_reserveRequirements"
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/dimen1"
                    android:text="2成人3行李"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

            </LinearLayout>


            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen27"
                android:paddingRight="@dimen/dimen27">

                <TextView
                    style="@style/AutoWrap"
                    android:paddingBottom="@dimen/dimen23"
                    android:text="@string/orderNumber"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_orderNumber"
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/dimen1"
                    android:text="201808271006"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

            </LinearLayout>

            <com.common.cklibrary.utils.myview.WebViewLayout
                android:id="@+id/web_descriptionThatIncome"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen6" />

            <com.common.cklibrary.utils.myview.WebViewLayout
                android:id="@+id/web_descriptionThat"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen6"
                android:background="@color/whiteColors" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/item_orderdetails_bottombar" />

</LinearLayout>